<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp">
    <com.davis.sdj.views.MineCustomLayout
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/mine_kefu"
        android:clickable="true"
        android:onClick="doClick"
        app:line="false"
        app:text="关于我们"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp">
    <com.davis.sdj.views.MineCustomLayout
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/setting_update"
        android:clickable="true"
        android:onClick="doClick"
        app:line="false"
        app:text="版本更新"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_15dp">
    <com.davis.sdj.views.MineCustomLayout
        android:id="@+id/setting_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/setting_share"
        android:clickable="true"
        android:onClick="doClick"
        app:line="false"
        app:text="推荐给好友"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/common_measure_15dp">
    <com.davis.sdj.views.MineCustomLayout
        android:id="@+id/fix_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/setting_fix_pass"
        android:clickable="true"
        android:onClick="doClick"
        app:line="false"
        app:text="修改密码"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_15dp">
    <com.davis.sdj.views.MineCustomLayout
        android:id="@+id/forget_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/setting_forget_pass"
        android:clickable="true"
        android:onClick="doClick"
        app:line="false"
        app:text="忘记密码"/>
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_margin="@dimen/common_measure_14dp"
        app:cardBackgroundColor="@color/colormain"
        app:cardCornerRadius="3dp">
        <TextView
            android:id="@+id/setting_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:onClick="doClick"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/white"
            android:text="退出当前账号"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
