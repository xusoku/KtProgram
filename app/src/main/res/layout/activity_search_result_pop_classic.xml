<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#90000000"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/pop_list_classic_main"
        android:layout_width="@dimen/common_measure_180dp"
        android:layout_height="@dimen/common_measure_400dp"
       android:background="@color/colorlightgray"
        android:scrollbars="none" />
    <ListView
        android:id="@+id/pop_list_classic"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_measure_400dp"
        android:paddingLeft="@dimen/common_measure_10dp"
        android:paddingRight="@dimen/common_measure_10dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none" />

</LinearLayout>
