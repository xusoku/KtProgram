<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/common_measure_156dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/common_measure_10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/fragment_index_item_image_item"
                android:layout_width="@dimen/common_measure_156dp"
                android:layout_height="@dimen/common_measure_156dp" />

            <com.davis.sdj.views.CustomTypefaceTextView
                android:id="@+id/fragment_index_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="aaa"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />

            <com.davis.sdj.views.CustomTypefaceTextView
                android:id="@+id/fragment_index_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="@color/colorgray"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>