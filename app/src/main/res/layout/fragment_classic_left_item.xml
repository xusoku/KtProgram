<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/common_measure_65dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.davis.sdj.views.CustomTypefaceTextView
            android:id="@+id/classic_rootid_list_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/common_measure_10dp"
            android:layout_height="@dimen/common_measure_65dp"
            android:textColor="@color/colorgray"
            android:text="家禽"
            android:gravity="center"
            android:textSize="@dimen/text_size_17"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/classic_rootid_list_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">
        <View
            android:layout_width="@dimen/common_measure_10dp"
            android:layout_height="match_parent"
            android:background="@color/colormain"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>