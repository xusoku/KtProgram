<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_15dp"
        android:background="@color/colorlightgray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_70dp"
        android:background="@color/white">
    <LinearLayout
        android:id="@+id/shop_location_headerid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_70dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/common_measure_28dp"
            android:layout_height="@dimen/common_measure_28dp"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:src="@mipmap/location_icon" />

        <com.davis.sdj.views.CustomTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_location"
            android:textColor="@color/colormain"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_15dp"
        android:background="@color/colorlightgray" />
</LinearLayout>
