<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/customStatusBarView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layTopBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_65dp"
        android:background="@color/colormain"
        >

        <com.davis.sdj.views.CustomTypefaceTextView
            android:id="@+id/tvTopBarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:alpha="1"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_22" />

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="@dimen/common_measure_28dp"
            android:layout_height="@dimen/common_measure_28dp"
            android:background="@null"
            android:src="@mipmap/btn_titlebar_back_normal"
            android:layout_centerVertical="true"
            android:onClick="doClick"
            android:layout_marginLeft="@dimen/common_measure_10dp" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="doClick"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btnRight1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="doClick"
            android:padding="15dp"
            android:layout_marginRight="50dp"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <com.davis.sdj.views.CustomTypefaceTextView
            android:id="@+id/btnRightTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="@dimen/common_measure_10dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ViewStub
            android:id="@+id/stubLoadingFailed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/layLoadingFailed"
            android:layout="@layout/layout_loading_failed" />
    </FrameLayout>
</LinearLayout>