<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:id="@+id/classic_rootid_right_nogrid_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/classic_rootid_right_nogrid_image"
                    android:layout_width="@dimen/common_measure_120dp"
                    android:layout_height="@dimen/common_measure_120dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY" />

                <com.davis.sdj.views.CustomTypefaceTextView
                    android:id="@+id/classic_rootid_right_nogrid_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="jia"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/text_size_17" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>