<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/index_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="@dimen/common_measure_10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/index_ad_noScrollview_iv1"
            android:layout_width="@dimen/common_measure_70dp"
            android:layout_height="@dimen/common_measure_70dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/index_ad_noScrollview_iv"
            android:layout_width="@dimen/common_measure_84dp"
            android:layout_height="@dimen/common_measure_84dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
        </RelativeLayout>

        <com.davis.sdj.views.CustomTypefaceTextView
            android:id="@+id/index_ad_noScrollview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>
</LinearLayout>