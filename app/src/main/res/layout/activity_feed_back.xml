<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.davis.sdj.views.CustomTypefaceEditText
            android:id="@+id/feedback_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_178dp"
            android:layout_margin="@dimen/common_measure_14dp"
            android:background="@drawable/bg_flow_tag_unselect"
            android:gravity="top"
            android:textSize="@dimen/text_size_17"
            android:hint="有什么不爽的在这里吐槽吧"
            android:padding="5dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_60dp"
            android:layout_margin="@dimen/common_measure_14dp"
            app:cardCornerRadius="3dp">

            <TextView
                android:id="@+id/feedback_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colormain"
                android:clickable="true"
                android:gravity="center"
                android:onClick="doClick"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
